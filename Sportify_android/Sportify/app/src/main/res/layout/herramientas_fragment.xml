<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.herramientas.HerramientasFragment">

    <TextView
        android:id="@+id/tx_reloj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="133dp"
        android:text="00:00:00"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_tiempo_alarma" />

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/boton_gris"
        android:text="RESTART"
        android:textColor="@color/blanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_reloj" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="101dp"
        android:text=" minutos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tx_tiempo_alarma"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tx_tiempo_alarma"
        android:layout_width="82dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/texto_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texto_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="3dp"
        android:text="Sonar cada "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="PAUSA"
        android:textColor="@color/blanco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_reloj" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="START"
        android:textColor="@color/blanco"
        app:layout_constraintEnd_toStartOf="@+id/btn_restart"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toEndOf="@+id/btn_pause"
        app:layout_constraintTop_toBottomOf="@+id/tx_reloj" />

    <TextView
        android:id="@+id/tx_marcador_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="31dp"
        android:text="00"
        android:textSize="65sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_p2_mas"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tx_cabecera_ptos1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="24dp"
        android:text="PUNTOS 1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tx_marcador_1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tx_marcador_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="31dp"
        android:text="00"
        android:textSize="65sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_p1_mas"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ts_cabecera_ptos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="24dp"
        android:text="PUNTOS 2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tx_marcador_2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_p1_mas"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#27E62F"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_p1_menos" />

    <Button
        android:id="@+id/btn_p1_menos"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/boton_rojo"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_p2_menos"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/boton_rojo"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_p2_mas" />

    <Button
        android:id="@+id/btn_p2_mas"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#27E62F"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_marcador_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="27dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="RESTART"
        android:textColor="@color/blanco"
        app:layout_constraintEnd_toStartOf="@+id/tx_marcador_2"
        app:layout_constraintStart_toEndOf="@+id/tx_marcador_1"
        app:layout_constraintTop_toBottomOf="@+id/tx_cabecera_ptos1" />

</androidx.constraintlayout.widget.ConstraintLayout>